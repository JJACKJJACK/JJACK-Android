<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_oneline_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_subhead"
        android:textColor="@color/text_caption"
        android:layout_marginLeft="@dimen/list_margin"
        android:layout_toLeftOf="@+id/btn_item_delete"
        android:layout_toStartOf="@+id/btn_item_delete"
        tools:text="Keyword"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/alpha_100"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.7"
        app:srcCompat="@drawable/ic_delete_black_36dp"
        android:layout_marginRight="@dimen/list_margin"/>
</RelativeLayout>