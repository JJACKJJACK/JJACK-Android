<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="activity"
            type="com.mkm.hanium.jjack.login.SignupActivity" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/extra_user_property"
            layout="@layout/layout_signup_extra_user_property" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/com_kakao_profile_property_margin"
            android:layout_marginBottom="@dimen/com_kakao_profile_property_margin"
            android:layout_marginLeft="@dimen/com_kakao_profile_property_margin"
            android:layout_marginRight="@dimen/com_kakao_profile_property_margin"
            android:textSize="@dimen/com_kakao_profile_property_text"
            android:textStyle="bold"
            style="@style/button"
            android:background="@drawable/selector_button_01"
            android:paddingLeft="@dimen/com_kakao_padding"
            android:paddingRight="@dimen/com_kakao_padding"
            android:text="@string/signup_button"
            android:enabled="false"
            android:onClick="@{activity::onButtonClick}" />
    </LinearLayout>
</layout>