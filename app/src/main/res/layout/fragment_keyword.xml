<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_keyword"
            android:layout_width="@dimen/spinner_big_width"
            android:layout_height="@dimen/spinner_big_height"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/btn_keyword_setting"
            android:layout_toStartOf="@+id/btn_keyword_setting"
            android:layout_marginRight="@dimen/spinner_margin"
            android:paddingTop="@dimen/spinner_vertical_margin"
            android:paddingBottom="@dimen/spinner_vertical_margin"
            android:paddingLeft="@dimen/spinner_left_margin"
            android:paddingRight="@dimen/spinner_margin"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btn_keyword_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/alpha_100"
            app:srcCompat="@drawable/ic_build_black_36dp"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/btn_margin"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_blank_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_top_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_no_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/text_caption"
            android:gravity="center"
            android:text="@string/no_keyword"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>